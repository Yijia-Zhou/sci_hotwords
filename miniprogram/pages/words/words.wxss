page {
  /* background-color: rgba(255, 250, 205, 0.05); */
  background-color: rgba(138, 109, 53, 0.03);
}

.wordLarge{
  font-size: 80rpx;
  text-align: center;
}

.wordSmall{
  justify-content: space-around;
  flex: 1;
  height: auto;
}

.wordDeriLeft {
  text-align: right;
  width: 45%;
  flex-grow: 0;
  flex-shrink: 1;
  vertical-align: super;
  font-style: italic;
  /* margin-bottom: 30rpx; */
}

.wordDeriRight {
  text-align: start;
  width: 45%;
  flex-grow: 0;
  font-style:oblique;
}

.subcontainer_deri {
  width: 96%;
  box-sizing: border-box;
  padding-bottom: 35rpx;
  border: steelblue dashed 1rpx;
  position: relative;
  padding-bottom: 55rpx;
}

.subcontainerHorizonDeri{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  gap: 10%;
  line-height: 27rpx;
}

.button_more_deri {
  position: absolute;
  right: 0;
  bottom: 0rpx;
  height: 38rpx;
  font-size: 25rpx;
  font: lighter;
  background-color:rgba(236, 255, 147, 0.2);
  border: steelblue dotted 1rpx;
  border-bottom: unset;
}

.subcontainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
  justify-content: space-around;
  width: 100%;
}

.subcontainerHorizon{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 15rpx 0;
}

.containerWord {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 80%;
  width: 80%;
}

.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 85%;
  width: 80%;
  border: 2px solid #ffffff;
  border-radius: 5px;
  /* background-color: #ffffff; */
  background-color: rgba(255, 250, 205, 0.1);
  /* background-color: rgba(138, 109, 53, 0.03); */
  /* box-shadow: 4px 0px 3px 1px #cccccc; */
  box-shadow: 9rpx 0px 9rpx 3rpx #cccccc;
  margin: 8px;
  margin-top: 75rpx;
  margin-left: 35rpx;
  position: relative;
}