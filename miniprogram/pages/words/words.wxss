/* 画 card 左上、右下俩三角 */
.card:before {
  content: "";
  display: block;
  position: absolute;
  border: 40px solid transparent;
  border-top: 40px solid #fefefe;
  top: -50px;
  left: -48px;
  box-shadow: 0px -7px 6px -9px black;
  transform: rotate(135deg);
}
.card:after {
  content: "";
  display: block;
  position: absolute;
  border: 40px solid transparent;
  border-bottom: 40px solid #fefefe;
  bottom: -50px;
  right: -48px;
  box-shadow: 0px 7px 6px -9px black;
  transform: rotate(135deg);
}

