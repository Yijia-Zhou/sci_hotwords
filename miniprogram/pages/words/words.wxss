  text-align: center;
  width: 100%;
  font-weight: 550;
}

/* 画 card 左上、右下俩三角 */
.card:before {
  content: "";
  display: block;
  position: absolute;
  border: 50px solid transparent;
  border-top: 50px solid #fefefe;
  top: -63px;
  left: -60px;
  box-shadow: 0px -7px 6px -9px black;
  transform: rotate(135deg);
}
.card:after {
  content: "";
  display: block;
  position: absolute;
  border: 50px solid transparent;
  border-bottom: 50px solid #fefefe;
  bottom: -63px;
  right: -60px;
  box-shadow: 0px 7px 6px -9px black;
  transform: rotate(135deg);
}

.table_more_deri {
  border: 0px solid darkgray;
  width: 100%;
  position: absolute;
  top: 5vh;
  padding-bottom: 260rpx;
}
