<!--pages/words/words.wxml--> 
<view class="container1">
  <view class="card" wx:if="{{!showMoreDeri}}">
    <view style="margin-top: 9rpx;"></view>
    <text wx:if='{{dictionary[index].total_count}}'>总词频：{{dictionary[index].total_count}}</text>
    <!--<text class="wordLarge" wx:if='{{dictionary[index].len<13}}'>{{dictionary[index].word}}</text>
    <text class="wordSmall" style="font-size: {{1000/dictionary[index].len}}rpx;" wx:else>{{dictionary[index].word}}</text>--> 
    <view class="subcontainer" bindtap="{{showPlay ? 'onPlay' : 'onPause'}}">
      <text class="wordLarge" wx:if='{{dictionary[index].len<13}}'>{{dictionary[index]._id}}</text>
      <text class="wordSmall" style="font-size: {{1000/dictionary[index].len}}rpx;" wx:else>{{dictionary[index]._id}}</text>
      <!--<text wx:if='{{dictionary[index].phonogram}}'>音标</text>--> 
      <view class="subcontainerHorizon">
        <text wx:if='{{dictionary[index].phonogram}}'>{{dictionary[index].phonogram}}</text>
        <!--
        <text style="font-size: 35rpx;text-align: center;background-color: #07c160;color: #fff;" bindtap="onPlay" wx:if='{{showPlay}}'>播放</text>
        <text style="font-size: 35rpx;text-align: center;background-color: #07c160;color: #fff;" bindtap="onPause" wx:else>暂停</text>
        -->
        <text style="font-size: 35rpx;text-align: center;background-color: #07c160;color: #fff;" wx:if='{{showPlay}}'>播放</text>
        <text style="font-size: 35rpx;text-align: center;background-color: #07c160;color: #fff;" wx:else>暂停</text>
      </view>
    <view class="subcontainer_deri" wx:if='{{dictionary[index].deris[0]}}'>
        <view class="subcontainerHorizonDeri" id="deris01">
            <text class="wordDeriLeft" wx:if='{{dictionary[index].deris[0]}}' style="font-size: {{font01}}rpx;" catchtap="onDeriDetail" id='deri0'>
              {{dictionary[index].deris[0].word}}
            </text>
            <text class="wordDeriRight" wx:if='{{dictionary[index].deris[1]}}' style="font-size: {{font01}}rpx;" catchtap="onDeriDetail" id='deri1'>
              {{dictionary[index].deris[1].word}}
            </text>
            <text wx:else decode="true">
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </text>
        </view>
        <view class="subcontainerHorizonDeri" id="deris23" wx:if='{{dictionary[index].deris[2]}}'>
            <text class="wordDeriLeft" wx:if='{{dictionary[index].deris[2]}}' style="font-size: {{font23}}rpx;" catchtap="onDeriDetail" id='deri2'>
              {{dictionary[index].deris[2].word}}
            </text>
            <text class="wordDeriRight" wx:if='{{dictionary[index].deris[3]}}' style="font-size: {{font23}}rpx;" catchtap="onDeriDetail" id='deri3'>
              {{dictionary[index].deris[3].word}}
            </text>
            <text wx:else decode="true">
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </text>
        </view>
        <view class="button_more_deri" catchtap="onMoreDeri" wx:if="{{dictionary[index].deris[4]}}">
            更多衍生词……
        </view>
    </view>

    </view>
    <view class="subcontainer" catchtap="onShowChinese">
      <!--<text>解释</text>--> 
      <text class="subtitle" wx:if="{{useMode==='识记模式' || showChinese}}">{{dictionary[index].chosen}}</text>
      <text class="subtitle" wx:else="index==0" style="font-style: oblique;">点击查看释义（核对答案~）</text>
    </view>
    <view class="subcontainer">
      <button type="primary" size='default' class='btn1' bindtap="onDone">我记住了</button>
      <button type="default" size='default' class='btn1' bindtap="onNext" style="margin-bottom: 100rpx;">还要努力</button>
    </view>
    <view style="margin-bottom: 6rpx;"></view>
  </view>

  <view id="more_deri" class="table" wx:if="{{showMoreDeri}}">
    <view class="tr bg-w">
      <view class="th" style="width: 20%;">词频</view>
      <view class="th">单词</view>
      <view class="th ">释义</view>
    </view>

    <block wx:for="{{dictionary[index].deris}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td" style="width: 20%;">{{item.count}}</view>
        <view class="td">{{item.word}}</view>
        <view class="td">{{item.bing}}</view>
      </view>
      <view class="tr" wx:else>
        <view class="td" style="width: 20%;">{{item.count}}</view>
        <view class="td">{{item.word}}</view>
        <view class="td">{{item.bing}}</view>
      </view>
    </block>

    <button type="primary" size='default' class='btn1' catchtap="onMoreDeri" style="margin-top: 50rpx;">返回</button>

  </view>
  <!-- <view class="botton-right-float">
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <text>选择词典</text>
      <text>/模式</text>
    </picker>
  </view> -->
</view>