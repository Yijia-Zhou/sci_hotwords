<view class="page_container">
  <view>
    <view class="progress-bar-container">
      <view class="progress-bar stripes">
        <text class="progress-bar-inner" style="width: {{target_percent}};"></text>
      </view>
    </view>
  </view>

  <wordcard word='{{word}}'></wordcard>

  <view class="main_button_container">
      <button type="primary" class='primary_button' bindtap="onDone" style="width: 61.8vw;">我记住了</button>
      <button type="default" class='following_button' bindtap="onToBeDone" style="width: 61.8vw;">还要努力</button>
      <button type="default" class='following_button' bindtap="onConfig" style="width: 61.8vw; opacity: {{setting_opacity}}" wx:if="{{showSetting}}">调整设置</button>
    </view>

</view>