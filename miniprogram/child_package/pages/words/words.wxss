page {
  position: relative;
}

.progress-bar {
  /* background-color: #1a1a1a; */
  background-color: rgba(232, 232, 216, 1);
  height: 24rpx;
  width: 100vw;
  border-radius: 5rpx;
  box-shadow: 0 1px 5px rgba(7, 193, 96, .4) inset, 0 1px 0 rgba(7, 193, 96, .2);
  position: absolute;
  left: 0;
  top: 0;
}

.stripes {
  background-size: 30rpx 30rpx;
  background-image: linear-gradient(
      135deg,
      /* rgba(255, 255, 255, .15) 25%, */
      rgba(7, 193, 96, .1) 25%,
      transparent 25%,
      transparent 50%,
      /* rgba(255, 255, 255, .15) 50%, */
      rgba(7, 193, 96, .1) 50%,
      /* rgba(255, 255, 255, .15) 75%, */
      rgba(7, 193, 96, .1) 75%,
      transparent 75%,
      transparent
  );
}

.progress-bar-inner {
  display: block;
  height: 24rpx;
  width: 100%;
  /* background-color: #34c2e3; */
  background-color: rgba(7, 193, 96, .5);
  border-radius: 3rpx;
  box-shadow: 0 1px 0 rgba(255, 255, 255, .5) inset;
  /* position: relative; */
}
