.paragraph {
  display: inline-block;
  margin: 0 6rpx;
}

.slider_diff {
  max-height: 2vh;
  margin: 16rpx 10rpx 12rpx;
  /* margin-bottom: 8rpx; */
}

.modal-content{
  display: flex;
  flex-direction: column;
  width: 84vw;
  height: 880rpx;
  background-color: #fff;
  /* border-radius: 10rpx; */
  padding: 20rpx;
  padding-top: 0;
  text-align: left;
  justify-content: space-between;
}

.main-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  min-height: 80%;
  overflow-y: hidden; 
  max-height: 80vh; /* 内容高度最高80vh 以免内容太多溢出*/
}

.showcase_container_whole {
  /* width: 92%; */
  box-sizing: border-box;
  border: 1px dashed steelblue;
  position: relative;
  /* padding-bottom: 55rpx; */
  flex: 0 1 auto;
}

.showcase_container_horizon{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50rpx;
  line-height: 12rpx;
}

.showcase_left {
  font-family: Inter Tight;
  text-align: right;
  width: 45%;
  vertical-align: super;
  font-style: oblique;
  padding-right: 3%;
  height: 50rpx;
}

.showcase_right {
  font-family: Inter Tight;
  text-align: start;
  width: 45%;
  font-style: oblique;
  padding-left: 3%;
  height: 50rpx;
}