<view class="page_container">
  <wordcard word='{{word}}'></wordcard>
  <view class="main_button_container">
    <button type="primary" class='primary_button' bindtap="onFavor" style="width: 61.8vw;">
      {{word.favored ? '取消收藏' : '收藏本词'}}
    </button>
    <button type="default" class="following_button" bindtap="onReturn" style="width: 61.8vw;">
      返回
    </button>
  </view>
</view>
