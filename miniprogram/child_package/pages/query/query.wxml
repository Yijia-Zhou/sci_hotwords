<view class="query_bar_container">
  <view class="query_bar">
    <icon class="query_icon" type="search" size="16"></icon>
    <input type="text" class="query_input" confirm-type='search' bindinput='onQuery' value='{{inputValue}}' placeholder="请输入查询词汇" focus='true'></input>
  </view>
  <!-- <view class="cancel_bar_btn" bindtap='onCancel'>取消</view> -->
</view>

<view class='{{isShowResultView?"resultBgView":"resultBgView-hidden"}}'>
	<view class="resultCell" wx:for="{{searchResultArr}}" wx:key="index">
    <view class="resultInnerCell" style="opacity:{{searchResultArr[index].derisIdx == -1 ? 1 : 0.7}}" data-resultindex="{{searchResultArr[index].idx}}" data-derisindex="{{searchResultArr[index].derisIdx}}" bindtap='toResult'>
     <text style="min-width: 240rpx; align-self: center; margin-right: 20rpx; font-size:smaller;">{{searchResultArr[index].word}}</text>
     <text style="align-self: center; flex-grow: 1;">{{searchResultArr[index].translation}}</text>
    </view>
	</view>
</view>


<button type="default" class='btn1 bottom_back_float' catchtap="onReturn" style="width: 61.8vw;">返回</button>
