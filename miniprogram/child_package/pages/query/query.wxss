.resultCell {
  /* padding: 0 30rpx; */
  margin: 0 3vw;
  min-height: 100rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.resultCell:first-child {
  border-top: 1px solid #ddd;
}

.resultInnerCell {
  display: flex;
  flex-grow: 1;
  margin: 0 2vw;
  justify-content: space-between;
}